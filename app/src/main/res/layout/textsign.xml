<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rellla" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <TextView






                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="center_vertical"
                  android:textStyle="bold"



                  android:textAlignment="viewStart"

                  android:textColor="#80808080"
                  android:id="@+id/fromwhom"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:textSize="10dp" />
              <TextView






                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="center_vertical"
                  android:textStyle="bold"



                  android:textAlignment="viewStart"
                  android:background="#FFEB3B"

                  android:textColor="#80808080"
                  android:id="@+id/officealsback"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:textSize="10dp" />
          </LinearLayout>
       </RelativeLayout>
       <TextView
           android:background="@drawable/back3"
           android:text="Working Details -"
           android:padding="10dp"



           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="left"
           android:gravity="center_vertical"
           android:textStyle="bold"


           android:textAlignment="viewStart"
           android:textColor="@color/white"
           android:id="@+id/livechat"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:textSize="12dp" />

   </LinearLayout>
</RelativeLayout>