<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/profile_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsGiveActivity">


    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/gradient_background"
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >



                            <ImageView
                                android:src="@drawable/profile_image"
                                android:id="@+id/profileimage"

                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="20dp"
                                ></ImageView>


                        </RelativeLayout>


                        <TextView
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="65dp"
                            android:fontFamily="@font/josefinsans_semibold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:id="@+id/packagename"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="false"
                            android:layout_centerHorizontal="false"

                            android:text="Select Profile Image"></TextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >



                            <ImageView
                                android:src="@drawable/ic_baseline_image_24"
                                android:id="@+id/nid_font"

                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="20dp"
                                ></ImageView>



                        </RelativeLayout>
                        <TextView
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="65dp"
                            android:fontFamily="@font/josefinsans_semibold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:id="@+id/nid_font_"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="false"
                            android:layout_centerHorizontal="false"

                            android:text="Select NID Font Image"></TextView>
                        ////
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >



                            <ImageView
                                android:src="@drawable/ic_baseline_image_24"
                                android:id="@+id/nid_font_vack"

                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="20dp"
                                ></ImageView>



                        </RelativeLayout>
                        <TextView
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="65dp"
                            android:fontFamily="@font/josefinsans_semibold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:id="@+id/nid_back_"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="false"
                            android:layout_centerHorizontal="false"

                            android:text="Select Back Font Image"></TextView>

                        <Button

                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Upload Data "
                            android:onClick="user"


                            android:id="@+id/user"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/www"
                            ></Button>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
